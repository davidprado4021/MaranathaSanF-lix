@model MaranathaSanFélix.ViewModel.LoginViewModel
@{
    Layout = null; // Esto desactiva el layout para esta vista
}

<link rel="stylesheet" href="~/css/LoginPag.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<body>
    <div class="background"></div>
    <div class="container">
        <div class="login-image">
            <a href="@Url.Action("Index", "Home")">
                <img src="/Sources/Image/Logos/MaranathaSF.svg" alt="LogoMSF" />
            </a>
        </div>
        <h2 id="formTitle">Welcome to Maranatha</h2>

        <form asp-action="Login" asp-controller="Login" method="post" id="authForm">
            <!-- Campo de email para login -->
            <div class="input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="your@email.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo de contraseña para login -->
            <div class="input-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="••••••••" required type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Botón de submit -->
            <button type="submit" id="submitButton">Login</button>
        </form>

        <p id="errorMessage" class="error-message"></p>
        <button id="toggleAuth" class="toggle-auth">Don't have an account? <a href="@Url.Action("Register", "Login")">Register</a></button>

        <div class="divider">Or continue with</div>
        <button id="googleAuth" class="google-btn">
            <span class="google-icon"></span>
            <span id="googleButtonText">Login with Google</span>
        </button>
    </div>

    <script src="~/js/login.js"></script>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>