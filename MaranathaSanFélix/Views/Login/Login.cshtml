@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/LoginPag.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<body>
    <div class="background"></div>
    <div class="container">
        <div class="login-image">
            <a href="@Url.Action("Index","Home")">
                <img src="/Sources/Image/Logos/MaranathaSF.svg" alt="LogoMSF" />
            </a>
        </div>
        <h2 id="formTitle">Welcome to Maranatha</h2>
        <form id="authForm">
            <div id="nameField" class="input-group hidden">
                <label for="name">Name</label>
                <input type="text" id="name" placeholder="Your name" required>
            </div>
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="your@email.com" required>
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" placeholder="••••••••" required>
            </div>
            <button type="submit" id="submitButton">Login</button>
        </form>
        <p id="errorMessage" class="error-message"></p>
        <button id="toggleAuth" class="toggle-auth">Don't have an account? Register</button>
        <div class="divider">Or continue with</div>
        <button id="googleAuth" class="google-btn">
            <span class="google-icon"></span>
            <span id="googleButtonText">Login with Google</span>
        </button>
    </div>
    <script src="script.js"></script>
</body>
<script src="~/js/login.js"></script>